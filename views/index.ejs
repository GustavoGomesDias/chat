<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <h1>Projeto #7 - Chat</h1>
    <div id="chat">
        <!-- Onde vai ser exibido a mensagem -->
    </div>
    <br>
    <input type="text" id="msg">
    <br>
    <input type="text" placeholder="Nome de Usuário" id="username">
    <button onclick="send()">Eniar</button>
</body>

<!-- lib do socket.io no front end -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js"></script>

<script>
    // Conectando o back com o front
    const socket = io("http://localhost:3000");

    // desconexão
    socket.on("disconnect", () => {
        console.log("Desconectado!");
    });

    socket.on("showMsg", data => {
        const chat = document.querySelector("#chat");

        const p = document.createElement("p");

        p.innerHTML = `${data.username}: ${data.msg}`;
        chat.append(p);
    });

    function send(){
        const msgField = document.querySelector('#msg');
        const usernameField = document.querySelector('#username');
    
        const msg = msgField.value;
        const username = usernameField.value;

        socket.emit("msg", { msg: msg, username: username });
    }

</script>

</html>